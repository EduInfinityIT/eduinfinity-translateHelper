<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.eduinfinity.dimu.translatehelper"
          android:versionCode="3"
          android:versionName="0.0.3">

    <uses-sdk
            android:minSdkVersion="16"
            android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.eduinfinity.dimu.translatehelper.activity.StartActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"
                android:theme="@style/AppThemeNoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.eduinfinity.dimu.translatehelper.activity.LessonMenuActivity"
                android:label="@string/title_activity_class_menu"/>
        <activity
                android:name="com.eduinfinity.dimu.translatehelper.activity.TranslateActivity"
                android:label="@string/app_name"/>
        <activity
                android:name="com.eduinfinity.dimu.translatehelper.activity.ProjectActivity"
                android:label="@string/title_activity_project"/>
        <activity
                android:name="com.eduinfinity.dimu.translatehelper.activity.SetTXIDActivity"
                android:label="@string/title_activity_set_txid"/>
        <activity
                android:name="com.eduinfinity.dimu.translatehelper.activity.HowToActivity"
                android:label="@string/title_activity_how_to"
                android:theme="@style/AppThemeNoTitle"/>
        <activity
                android:name="com.eduinfinity.dimu.translatehelper.activity.VideoSelectActivity"
                android:label="@string/title_activity_video_select">
        </activity>
    </application>

</manifest>